<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            tools:ignore="ContentDescription"/>

        <TextView
            android:layout_width="match_parent"
            android:textSize="40sp"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:textStyle="bold"
            android:text="@string/numa"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="#F0F0F0"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="0dp">

            <com.numa.app.Views.MainButton
                app:text="@string/note_identification"
                app:icon="@mipmap/ic_launcher"
                android:id="@+id/activity_main_button_note_identification"
                android:background="@drawable/top_left_rounded_button"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="mainButtonClicked"
                tools:ignore="NestedWeights" />

            <com.numa.app.Views.MainButton
                app:text="@string/coin_identification"
                app:icon="@mipmap/ic_launcher"
                android:background="@drawable/top_right_rounded_button"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="mainButtonClicked"
                tools:ignore="NestedWeights" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="0dp">

            <com.numa.app.Views.MainButton
                app:text="@string/my_collection"
                app:icon="@mipmap/ic_launcher"
                android:background="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="mainButtonClicked"
                tools:ignore="NestedWeights" />

            <com.numa.app.Views.MainButton
                app:text="@string/grade_estimate"
                app:icon="@mipmap/ic_launcher"
                android:background="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="mainButtonClicked"
                tools:ignore="NestedWeights" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="0dp">

            <com.numa.app.Views.MainButton
                app:text="@string/want_to_buy"
                app:icon="@mipmap/ic_launcher"
                android:background="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="mainButtonClicked"
                tools:ignore="NestedWeights" />

            <com.numa.app.Views.MainButton
                app:text="@string/want_to_sell"
                app:icon="@mipmap/ic_launcher"
                android:background="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="mainButtonClicked"
                tools:ignore="NestedWeights" />
        </LinearLayout>

        <com.numa.app.Views.MainButton
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="0dp"
            app:text="@string/financing_information"
            app:icon="@mipmap/ic_launcher"
            android:background="@drawable/bottom_left_right_rounded_button"
            android:foreground="?attr/selectableItemBackground"
            android:layout_margin="1dp"
            android:onClick="mainButtonClicked"
            tools:ignore="NestedWeights" />
    </LinearLayout>
</LinearLayout>